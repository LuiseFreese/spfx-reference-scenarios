{
  "type": "AdaptiveCard",
  "body": [{
      "type": "Container",
      "bleed": true,
      "backgroundImage": {
        "url": "${$root.mainImage}"
      },
      "items": [{
          "type": "Container",
          "minHeight": "120px"
        },
        {
          "type": "ColumnSet",
          "columns": [{
              "type": "Column",
              "width": "auto",
              "style": "default",
              "items": [{
                  "type": "ColumnSet",
                  "columns": [{
                      "type": "Column",
                      "width": "auto",
                      "items": [{
                        "type": "TextBlock",
                        "text": "${$root.strings.OpenStatus}",
                        "wrap": true,
                        "color": "Default",
                        "weight": "Bolder",
                        "size": "Small"
                      }]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [{
                        "type": "TextBlock",
                        "text": "â€¢",
                        "wrap": true,
                        "horizontalAlignment": "Center",
                        "isSubtle": true
                      }]
                    },
                    {
                      "type": "Column",
                      "width": "stretch",
                      "items": [{
                        "type": "TextBlock",
                        "text": "${$root.strings.ClosingInText}",
                        "wrap": true,
                        "color": "Attention",
                        "weight": "Default",
                        "size": "Small",
                        "spacing": "Small"
                      }]
                    }
                  ]
                },
                {
                  "type": "TextBlock",
                  "text": "${$root.selectedCafeteria.name}",
                  "wrap": true,
                  "size": "ExtraLarge",
                  "weight": "Bolder",
                  "spacing": "Medium"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "style": "default",
      "bleed": true,
      "items": [{
        "type": "Container",
        "minHeight": "24px",
        "items": [{
          "type": "ColumnSet",
          "columns": [{
              "type": "Column",
              "width": "stretch",
              "items": [{
                  "type": "TextBlock",
                  "text": "${$root.strings.MenuHeader}",
                  "wrap": true,
                  "weight": "Bolder",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "Container",
                  "backgroundImage": {
                    "url": "${$root.dividerImage}",
                    "fillMode": "RepeatHorizontally",
                    "verticalAlignment": "Center"
                  },
                  "minHeight": "8px",
                  "spacing": "None"
                }
              ],
              "horizontalAlignment": "Center",
              "minHeight": "44px",
              "verticalContentAlignment": "Top"
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [{
                  "type": "TextBlock",
                  "text": "${$root.strings.InfoHeader}",
                  "wrap": true,
                  "horizontalAlignment": "Center",
                  "weight": "Bolder",
                  "color": "Accent"
                },
                {
                  "type": "Container",
                  "backgroundImage": {
                    "url": "${$root.dividerImage}",
                    "fillMode": "RepeatHorizontally",
                    "verticalAlignment": "Center"
                  },
                  "minHeight": "8px",
                  "spacing": "None",
                  "isVisible": false
                }
              ],
              "selectAction": {
                "type": "Action.ToggleVisibility",
                "targetElements": [
                  "show_info",
                  "show_menu"
                ]
              },
              "minHeight": "44px"
            }
          ],
          "id": "show_menu"
        }, {
          "type": "ColumnSet",
          "isVisible": false,
          "columns": [{
              "type": "Column",
              "width": "stretch",
              "items": [{
                  "type": "TextBlock",
                  "text": "${$root.strings.MenuHeader}",
                  "wrap": true,
                  "weight": "Bolder",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "Container",
                  "backgroundImage": {
                    "url": "${$root.dividerImage}",
                    "fillMode": "RepeatHorizontally",
                    "verticalAlignment": "Center"
                  },
                  "minHeight": "8px",
                  "spacing": "None",
                  "isVisible": false
                }
              ],
              "horizontalAlignment": "Center",
              "minHeight": "44px",
              "verticalContentAlignment": "Top",
              "selectAction": {
                "type": "Action.ToggleVisibility",
                "targetElements": [
                  "show_info",
                  "show_menu"
                ]
              }
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [{
                  "type": "TextBlock",
                  "text": "${$root.strings.InfoHeader}",
                  "wrap": true,
                  "horizontalAlignment": "Center",
                  "weight": "Bolder",
                  "color": "Accent"
                },
                {
                  "type": "Container",
                  "backgroundImage": {
                    "url": "${$root.dividerImage}",
                    "fillMode": "RepeatHorizontally",
                    "verticalAlignment": "Center"
                  },
                  "minHeight": "8px",
                  "spacing": "None"
                }
              ],
              "minHeight": "44px"
            }
          ],
          "id": "show_info"
        }],
        "spacing": "Medium"
      }],
      "spacing": "Medium"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "backgroundImage": {
    "horizontalAlignment": "Center"
  }
}