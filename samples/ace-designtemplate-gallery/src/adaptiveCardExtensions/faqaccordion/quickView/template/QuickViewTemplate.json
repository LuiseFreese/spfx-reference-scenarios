{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "__comment": "Elements used",
  "body": [{
      "type": "Container",
      "spacing": "None",
      "minHeight": "8px"
    },
    {
      "type": "ColumnSet",
      "columns": [{
          "type": "Column",
          "width": "64px",
          "items": [{
              "type": "Image",
              "url": "${faqApp.mainImage}"
            },
            {
              "type": "TextBlock",
              "text": "${faqApp.imageCaption}",
              "wrap": true,
              "size": "Small",
              "color": "Dark",
              "weight": "Bolder",
              "horizontalAlignment": "Center"
            }
          ],
          "horizontalAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${faqApp.title}",
      "wrap": true,
      "size": "Large",
      "weight": "Bolder",
      "spacing": "Large"
    },
    {
      "type": "TextBlock",
      "text": "${faqApp.introContent}",
      "wrap": true
    },
    {
      "type": "Container",
      "$data": "${faqApp.faqs}",
      "items": [{
          "type": "Container",
          "selectAction": {
            "type": "Action.ToggleVisibility",
            "title": "q{$index}",
            "targetElements": [
              "a{$index}",
              "chevron_up{$index}",
              "chevron_down{$index}"
            ]
          },
          "items": [{
            "type": "ColumnSet",
            "columns": [{
                "type": "Column",
                "width": "stretch",
                "items": [{
                  "type": "TextBlock",
                  "wrap": true,
                  "text": "${question}",
                  "weight": "Bolder",
                  "spacing": "Large",
                  "separator": true
                }]
              },
              {
                "type": "Column",
                "width": "28px",
                "verticalContentAlignment": "Center",
                "items": [{
                    "type": "Image",
                    "url": "data:image/png;base64,",
                    "width": "20px",
                    "height": "20px",
                    "id": "chevron_up{$index}",
                    "isVisible": "${if($index == 0, true, false)}"
                  },
                  {
                    "type": "Image",
                    "url": "data:image/png;base64,",
                    "id": "chevron_down{$index}",
                    "width": "20px",
                    "height": "20px",
                    "isVisible": "${if($index == 0, false, true)}"
                  }
                ]
              }
            ]
          }],
          "verticalContentAlignment": "Center",
          "minHeight": "30px",
          "spacing": "Large",
          "style": "emphasis"
        },
        {
          "type": "Container",
          "id": "a{$index}",
          "isVisible": "${if($index == 0, true, false)}",
          "items": [{
              "type": "ColumnSet",
              "columns": [{
                  "type": "Column",
                  "width": "8px"
                },
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [{
                      "type": "TextBlock",
                      "text": "${answer} ",
                      "wrap": true,
                      "spacing": "Padding"
                    }, {
                      "type": "Container",
                      "$when": "${length(icons[0].title) > 0}",
                      "items": [{
                        "type": "ColumnSet",
                        "$data": "${icons}",
                        "$when": "${mod($index, 2) == 0}",
                        "columns": [{
                          "type": "Column",
                          "width": "stretch",
                          "items": [{
                              "type": "Image",
                              "horizontalAlignment": "Center",
                              "url": "${iconUrl}",
                              "width": "64px",
                              "height": "64px"
                            },
                            {
                              "type": "TextBlock",
                              "text": "${title}",
                              "wrap": true,
                              "horizontalAlignment": "Center",
                              "weight": "Bolder"
                            }
                          ],
                          "style": "emphasis",
                          "selectAction": {
                            "type": "Action.OpenUrl",
                            "url": "${iconLink}",
                            "title": "${linkTitle}"
                          }
                        }, {
                          "type": "Column",

                          "width": "stretch",
                          "items": [{
                              "type": "Image",
                              "horizontalAlignment": "Center",
                              "url": "${$root.faqApp.faqs[0].icons[$index+1].iconUrl}",
                              "width": "64px",
                              "height": "64px"
                            },
                            {
                              "type": "TextBlock",
                              "text": "${$root.faqApp.faqs[0].icons[$index+1].title} ",
                              "wrap": true,
                              "horizontalAlignment": "Center",
                              "weight": "Bolder"
                            }
                          ],
                          "style": "emphasis",
                          "selectAction": {
                            "type": "Action.OpenUrl",
                            "url": "${$root.faqApp.faqs[0].icons[$index+1].iconLink} ",
                            "title": "${$root.faqApp.faqs[0].icons[$index+1].linkTitle} "
                          }
                        }],
                        "spacing": "Medium"
                      }]
                    }

                  ]
                }
              ]
            },
            {
              "type": "Container",
              "spacing": "None",
              "minHeight": "24px"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "ExtraLarge",
      "style": "accent",
      "items": [{
        "type": "Container",
        "style": "accent",
        "items": [{
          "type": "Container",
          "items": [{
              "type": "TextBlock",
              "text": "${strings.FormQuestion}",
              "wrap": true,
              "size": "Medium",
              "weight": "Bolder"
            },
            {
              "type": "Input.Text",
              "placeholder": "${strings.TextBoxPlaceholder}",
              "value": "${$root.question}",
              "id": "question"
            },
            {
              "type": "ActionSet",
              "actions": [{
                "type": "Action.Submit",
                "title": "${strings.SubmitQuestionButton}",
                "style": "positive",
                "data": {
                  "id": "submit"
                }
              }]
            }
          ],
          "style": "accent"
        }]
      }],
      "backgroundImage": {
        "verticalAlignment": "Center",
        "horizontalAlignment": "Center"
      },
      "verticalContentAlignment": "Bottom",
      "minHeight": "2px"
    }
  ]
}